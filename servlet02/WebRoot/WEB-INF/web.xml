<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
<servlet>
	<servlet-name>actionServlet</servlet-name>
	<servlet-class>web.ActionServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>actionServlet</servlet-name>
	<url-pattern>*.do</url-pattern>
</servlet-mapping>
<!--添加管理员-->
<servlet>
	<servlet-name>addAdminServlet</servlet-name>
	<servlet-class>web.AddAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>addAdminServlet</servlet-name>
	<url-pattern>/add</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>listAdminServlet</servlet-name>
	<servlet-class>web.ListAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>listAdminServlet</servlet-name>
	<url-pattern>/list</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>delAdminServlet</servlet-name>
	<servlet-class>web.DelAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>delAdminServlet</servlet-name>
	<url-pattern>/del</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>loadAdminServlet</servlet-name>
	<servlet-class>web.LoadAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>loadAdminServlet</servlet-name>
	<url-pattern>/load</url-pattern>
</servlet-mapping>
<servlet>
	<servlet-name>updateAdminServlet</servlet-name>
	<servlet-class>web.UpdateAdminServlet</servlet-class>
</servlet>
<servlet-mapping>
	<servlet-name>updateAdminServlet</servlet-name>
	<url-pattern>/update</url-pattern>
</servlet-mapping>
	
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
