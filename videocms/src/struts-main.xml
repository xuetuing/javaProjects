<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
<!-- 主页面 入口-->  
	<package name="main" namespace="/main" extends="struts-default">
		<interceptors>
			<interceptor name="login" class="interceptor.LoginInterceptor"></interceptor>
			<interceptor-stack name="mystack">
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="login"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<action name="index">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/videos.jsp</result>
		</action>
		<action name="userVip">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/user-vip.jsp</result>
		</action>
		<action name="userAdmin">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/user-admin.jsp</result>
		</action>
		<action name="roleList">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/role-list.jsp</result>
		</action>
		<action name="videosList">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/videos-list.jsp</result>
		</action>
		<action name="videosUpload">
			<interceptor-ref name="mystack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result>/WEB-INF/videos-upload.jsp</result>
		</action>
	</package>
</struts>



