<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"      
 "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.xms.dao.EmpDao">
	<!-- 查询全部员工的映射配置 -->
	<select id="findAll" resultType="com.xms.entity.Emp">
		select * from emp
	</select>
	<!-- 根据员工号查询员工 -->
	<!-- java.lang.Integer或者int -->
	<select id="findByEmpno" parameterType="java.lang.Integer" resultType="com.xms.entity.Emp">
		select * from emp where empno = #{para}
	</select>
	<!-- 添加员工 -->
	<insert id="save" parameterType="com.xms.entity.Emp">
		insert into emp values(#{empno},#{ename},#{salary},#{bonus},#{hiredate},#{deptno})
	</insert>
	<!-- 修改员工信息 -->
	<update id="update" parameterType="com.xms.entity.Emp">
		update emp set ename=#{ename},salary=#{salary},bonus=#{bonus},
		hiredate=#{hiredate},deptno=#{deptno} where empno=#{empno}
	</update>
	<!-- 删除操作 -->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from emp where empno = #{empno}
	</delete>
	<!-- 关联查询 -->
	<select id="findEmpAndDeptByEmpno" parameterType="integer" resultType="java.util.Map">
		select e.*,d.* from emp e inner join dept d on e.deptno=d.deptno where e.empno= #{empno}
	</select>
	<select id="findEmpAndDept" resultType="java.util.Map">
		select e.*,d.* from emp e inner join dept d on e.deptno=d.deptno
	</select>
</mapper>
 
 
 
 
 
 
 
 
 
 
 