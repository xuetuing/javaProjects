<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- 角色管理 -->
	<package name="roleManage" namespace="/roleManage" extends="json-default">
		<action name="list" class="action.RoleAction" method="roleList">
			<result name="success" type="json">
				<param name="includeProperties">list.*,totalPage</param>
			</result>
		</action>
		<action name="privList" class="action.RoleAction" method="privList">
			<result name="success" type="json">
				<param name="root">privs</param>
			</result>
		</action>
		<action name="addRole" class="action.RoleAction" method="addRole">
			<result name="success" type="json">
				<param name="root">body</param>
			</result>
		</action>
		<action name="loadOneRole" class="action.RoleAction" method="loadOneRole">
			<result name="success" type="json">
				<param name="root">body</param>
			</result>
		</action>
		<action name="updateRole" class="action.RoleAction" method="updateRole">
			<result name="success" type="json">
				<param name="root">body</param>
			</result>
		</action>
		<action name="delRole" class="action.RoleAction" method="delRole">
			<result name="success" type="json">
				<param name="root">body</param>
			</result>
		</action>
	
	</package>      

</struts>
