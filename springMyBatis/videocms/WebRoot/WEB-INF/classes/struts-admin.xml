<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<!-- 管理员 -->
	<package name="admin" namespace="/admin" extends="json-default">
		<action name="list" class="action.AdminAction" method="adminList">
			<result name="success" type="json">
				<param name="includeProperties">list.*,totalPage</param>
			</result>
		</action> 
		<action name="roleList" class="action.AdminAction" method="roleList">
			<result name="success" type="json">
				<param name="root">roles</param>
			</result>
		</action>
		<action name="addAdmin" class="action.AdminAction" method="addAdmin">
			<result name="success" type="json"></result>
		</action>
		<action name="loadAdmin" class="action.AdminAction" method="loadAdmin">
			<result name="success" type="json">
				<param name="root">admin</param>
			</result>
		</action>
		<action name="updateAdmin" class="action.AdminAction" method="updateAdmin">
			<result name="success" type="json">
				<param name="root">responseStr</param>
			</result>
		</action>
		<action name="delAdmin" class="action.AdminAction" method="delAdmin">
			<result name="success" type="json">
				<param name="root">body</param>
			</result>
		</action>
	</package>

</struts>
