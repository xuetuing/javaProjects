/* pages/main/main.wxss */
.content{
  height:100%;
  position: fixed;
  color: #FFFFFF;
  font-family: 微软雅黑,宋体;
  font-size: 14px;
  background-size:100% 100%
}
.background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}
.today{
  padding-top: 50rpx;
  height: 50%; 
  color: #FFFFFF;
}
.info{
  background: #FFFFFF;
  background: rgba(0,0,0,0.5);
  box-shadow: 10px 10 px 20px rgba(0,0,0,0.5);
}
.city{
  color: white;
  font-size: 16px;
  text-align: right;
  margin-right: 10rpx;
  margin-top: 30rpx;
}
.temp{
  color: white;
  font-size: 50px;
  text-align: center;
}
.weather{
  color: white;
  font-size: 16px;
  text-align: center;
}

.future{
  display: flex;
  flex-direction: row;
  height: 30%;
  background: #FFFFFF;
  background:rgba(0, 0, 0, 0.1);
  box-shadow: 10px 10px 20px rgba(0,0,0,0.5);
  text-align: center;
  padding-top:10rpx;
  padding-bottom:20rpx;
}

.future-item{
  min-height: 100%;
  border: 1px solid coral;
  border-radius: 10px;
  padding-top: 10rpx;
}

