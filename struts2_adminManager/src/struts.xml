<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>
	<package name="admin" namespace="/admin" extends="struts-default">
		<interceptors>
			<interceptor name="login" class="interceptor.LoginInterceptor"></interceptor>
			<!-- 定义拦截器栈 -->
			<interceptor-stack name="myStack">
				<!-- 先默认，后自定义的拦截器 -->
				<interceptor-ref name="defaultStack"></interceptor-ref>
				<interceptor-ref name="login"></interceptor-ref>
			</interceptor-stack>
			
		</interceptors>
		<action name="list" class="action.ListAction">
			<!--使用拦截器  <interceptor-ref name="login"></interceptor-ref> -->
			<!-- 使用拦截器栈 -->
			<interceptor-ref name="myStack"></interceptor-ref>
			<result name="login" type="redirectAction">
				<param name="namespace">/login</param>
				<param name="actionName">loginForm</param>
			</result>
			<result name="success">/WEB-INF/list.jsp</result>
		</action>
	</package>     
	
	<package name="login" namespace="/login" extends="json-default">
		<action name="loginForm">
			<result>/WEB-INF/login.jsp</result>
		</action>
		<action name="login" class="action.LoginAction">
			<result name="error">/WEB-INF/login.jsp</result>
			<result name="success" type="redirectAction">
				<param name="namespace">/admin</param>
				<param name="actionName">list</param>
			</result>
		</action>
		<action name="checkCode" class="action.ImgAction">
			<result name="success" type="stream">
				<param name="inputName">is</param>
			</result>
		</action>
		<action name="checkUserCode" class="action.CheckUserCodeAction">
			<result name="success" type="json">
				<param name="root">flag</param>
			</result>
		</action>
	</package>                                                                                                                                                                                                                                                                                                                                                                                                                             
</struts>





